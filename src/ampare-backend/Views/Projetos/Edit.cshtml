@model ampare_backend.Models.Projeto

@{
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

<h4>Projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdProjeto" />
            <div class="form-group">
                <label asp-for="IdOng" class="control-label"></label>
                <input asp-for="IdOng" class="form-control" />
                <span asp-validation-for="IdOng" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ResponsavelProjeto" class="control-label"></label>
                <input asp-for="ResponsavelProjeto" class="form-control" />
                <span asp-validation-for="ResponsavelProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomeProjeto" class="control-label"></label>
                <input asp-for="NomeProjeto" class="form-control" />
                <span asp-validation-for="NomeProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DescricaoProjeto" class="control-label"></label>
                <input asp-for="DescricaoProjeto" class="form-control" />
                <span asp-validation-for="DescricaoProjeto" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="StatusProjeto" /> @Html.DisplayNameFor(model => model.StatusProjeto)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="DataInicio" class="control-label"></label>
                <input asp-for="DataInicio" class="form-control" />
                <span asp-validation-for="DataInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CidadeProjeto" class="control-label"></label>
                <input asp-for="CidadeProjeto" class="form-control" />
                <span asp-validation-for="CidadeProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EstadoProjeto" class="control-label"></label>
                <input asp-for="EstadoProjeto" class="form-control" />
                <span asp-validation-for="EstadoProjeto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

</body>
</html>
