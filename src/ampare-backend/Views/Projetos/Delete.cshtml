@model ampare_backend.Models.Projeto

@{
    ViewData["Title"] = "Apagar Projeto";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Apagar</title>
</head>
<body>

    <h3>Tem certeza que deseja apagar esse cadastro?</h3>
    <div>
    <h4>Cadastro Projeto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            ONG vinculada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdOng)
        </dd>
        <dt class = "col-sm-2">
           Responsavel pelo projeto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ResponsavelProjeto)
        </dd>
        <dt class = "col-sm-2">
            Nome do projeto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeProjeto)
        </dd>
        <dt class = "col-sm-2">
            Descricao do projeto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DescricaoProjeto)
        </dd>
        <dt class = "col-sm-2">
            Ativo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatusProjeto)
        </dd>
        <dt class = "col-sm-2">
            Data de inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataInicio)
        </dd>
        <dt class = "col-sm-2">
            Cidade
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CidadeProjeto)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.EstadoProjeto)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdProjeto" />
            <input type="submit" value="Apagar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
</body>
</html>
