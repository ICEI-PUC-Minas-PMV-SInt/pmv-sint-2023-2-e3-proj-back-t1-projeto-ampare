@model ampare_backend.Models.ProjetoVoluntario

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Detalhes da inscrição de voluntário em projeto</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Projeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Projeto.CidadeProjeto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voluntario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voluntario.Login)
        </dd>
        <dt class="col-sm-2">
            Ativo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.ProjetoVoluntarioId" class="btn btn-warning">Editar</a>
    <a asp-action="Index" class="btn btn-success">Voltar</a>
</div>
