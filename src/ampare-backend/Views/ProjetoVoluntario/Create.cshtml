@model ampare_backend.Models.ProjetoVoluntario

@{
    ViewData["Title"] = "Inscrição";
}

<h1>Inscrição</h1>

<h4>Inscrever voluntário em projeto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdProjeto" class="control-label"></label>
                <select asp-for="IdProjeto" class="form-control" asp-items="ViewBag.IdProjeto"></select>
            </div>
            <div class="form-group">
                <label asp-for="IdVoluntario" class="control-label"></label>
                <select asp-for="IdVoluntario" class="form-control" asp-items="ViewBag.IdVoluntario"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> Ativo
                </label>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Voltar</a>
                <input type="submit" value="Enviar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
