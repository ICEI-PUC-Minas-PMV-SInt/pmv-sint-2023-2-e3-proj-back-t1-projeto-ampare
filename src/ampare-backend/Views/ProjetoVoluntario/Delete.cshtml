@model ampare_backend.Models.ProjetoVoluntario

@{
    ViewData["Title"] = "Apagar inscrição";
}

<h1>Apagar inscrição</h1>

<h3>Tem certeza que deseja apagar essa inscrição?</h3>
<div>
    <h4>ProjetoVoluntario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Projeto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Projeto.CidadeProjeto)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Voluntario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Voluntario.Login)
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProjetoVoluntarioId" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
